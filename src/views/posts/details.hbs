<body>
    <div id="container">
        <section id="detailsPage">
            <div id="detailsInfo">
                <h1>Name: {{electronic.name}} </h1>
                <div class="info"><img src="{{electronic.imageUrl}}"></div>
                <div class="info">
                    <h3>Type: {{electronic.type}}</h3>
                    <h3>Year of Production: {{electronic.production}}</h3>
                    <h3>Years of Exploitation: {{electronic.exploit}}</h3>
                    <h3>Damages: {{electronic.damages}}</h3>
                    <h3>Description:{{electronic.description}}</h3>
                    <h2>Price: {{electronic.price}}</h2>
                </div>

                <!-- If there is a user logged in -->
                {{#if isAuthenticated}}
                <div class="buttons">
                    <!-- If the user is not the owner of the electronic item -->
                    {{#unless isOwner}}
                    {{#unless hasBought}} <!-- Check if user has not bought -->
                    <a href="/posts/{{electronic._id}}/buy" class="buy-btn">Buy</a>
                    {{/unless}}
                    {{else}}
                    <a href="/posts/{{electronic._id}}/edit" class="edit-btn">Edit</a>
                    <a href="/posts/{{electronic._id}}/delete" class="delete-btn">Delete</a>
                    <!-- Add additional logic based on specific conditions (if bought) -->
                    {{/unless}}
                    <!-- Display a message if the user is not the owner and has bought this electronic item -->
                    {{#if hasBought}}
                    <p><span class="buy">Thank You For Your Purchase</span></p>
                    {{/if}}
                </div>
                {{/if}}
            </div>
        </section>
    </div>
</body>
