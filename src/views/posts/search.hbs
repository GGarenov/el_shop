<body>
    <div id="container">
        <section class="search">
            <h1>Search</h1>

            <form class="search-form" action="/posts/search" method="GET">
                <input type="text" class="search-name" name="name" placeholder="Search Name..." value="{{name}}">
                <input type="text" class="search-type" name="type" placeholder="Search Type..." value="{{type}}">
                <button type="submit" class="btn-search">Search</button>
            </form>

            {{#if electronics.length}}
            <div class="search-result">
                <div class="search-list">
                    {{#each electronics}}
                    <a href="/posts/{{this._id}}/details" class="added-electronics-in-market">
                        <img src="{{this.imageUrl}}" class="picture-added-electronics">
                        <h3>{{this.name}}</h3>
                        <span>Price: ${{this.price}}</span>
                    </a>
                    {{/each}}
                </div>
            </div>
            {{else}}
            <div class="no-match">
                <p>No match was found!</p>
            </div>
            {{/if}}
        </section>
    </div>
</body>
